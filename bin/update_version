#!/usr/bin/env bash

root=$(dirname $0)/..
version=$1
if [[ -z $version ]]; then
  echo "Usage: $(basename $0) NEW_VERSION"
  exit 1
fi

for f in $root/package.json $root/src/package.json $root/dependencies/package.json; do
  content=$(cat $f)
  jq --arg v "$version" '.version = $v' <<< $content > $f
done

if [[ "$OSTYPE" = "darwin*" ]]; then
  sedreplace="sed -i ''"
else
  sedreplace="sed -i''"
fi

$sedreplace -E "s/SemanticVersion: .+/SemanticVersion: $version/" $root/sam/template.yml
$sedreplace -E "s/  serverless_iiif_app_version   =.+/  serverless_iiif_app_version   = \"$version\"" $root/extras/terraform/main.tf
